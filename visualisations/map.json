{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Marathon Time by Country",
    "data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "width": 800,
    "height": 450,
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "gender_selection",
        "value": null,
        "bind": {
          "input": "select",
          "options": [null, "M", "F"],
          "labels": ["Show All", "M", "F"],
          "name": "Gender: "
        }
      }
    ],
    "transform": [
    
    {
      "lookup": "properties.ADM0_A3",
        "from": {
          
        "data": {
          "url": "https://raw.githubusercontent.com/abigail-rose/3179/main/data/marathon_results_2015.csv"        },
          "key": "Country",
        "fields": ["Official Time", "M/F"]
      }
      },
      {
        "calculate": "parseInt(split(datum['Official Time'],':')[0])*60 +parseInt(split(datum['Official Time'],':')[1]) + parseInt(split(datum['Official Time'],':')[2]/60) ",
        "as": "run_duration"
      }
    ],
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "fill": "#eee",
          "stroke": "#757575",
          "strokeWidth": 0.5
          
      },
      "encoding":{
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "run_duration", "type": "nominal", "title": "Average Marathon Duration (min)"}
          ]
      }
    },
    {
      "mark": {"type": "geoshape"},

      "transform": [
        {"filter": "datum['M/F'] == gender_selection "}
      ],
      
        "encoding": {
        "color": {
          "field": "run_duration",
          "title": "Average Marathon Duration (min)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100, 150, 200, 250, 300, 350, 400, 450]
        }
        
        },
        "opacity": {
          "condition": {"param": "gender_selection", "value": 1},
          "value": 0.4
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "run_duration", "type": "quantitative", "title": "Average Marathon Duration (min)"}
          ]
      }
    },
    {
      "mark": {"type": "geoshape"},

      "transform": [{"filter": "gender_selection == null"}],
      
        "encoding": {
        "color": {
          "field": "run_duration",
          "title": "Average Marathon Duration (min)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100, 150, 200, 250, 300, 350, 400, 450]
        }
        
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "run_duration", "type": "quantitative", "title": "Average Marathon Duration (min)"}
          ]
      }
    }
  ]
    }
  